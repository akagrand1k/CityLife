@model CityLife.WebApp.Models.Section.SectionViewModel
@{
    ViewBag.Title = "Редактирование";
}

<!-- Title -->
<div class="row heading-bg">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h5 class="txt-dark">@ViewBag.Title</h5>
    </div>
</div>
<!-- /Title -->
<!-- Row -->
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">Редактирование раздела</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="form-wrap">
                                @using (Html.BeginForm(null, null, FormMethod.Post, new { }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputEmail_1">Наименование раздела</label>
                                            @Html.TextBoxFor(x => x.Name, new { @class = "required form-control" })
                                            @Html.ValidationMessageFor(x => x.Name)
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputpwd_1">Целевой Url</label>
                                            @Html.TextBoxFor(x => x.Url, new { @class = "required form-control" })
                                            @Html.ValidationMessageFor(x => x.Url)
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputpwd_1">Устаревший Url</label>
                                            @Html.TextBoxFor(x => x.ObsoleteUrl, new { @class = "required form-control" })
                                            @Html.ValidationMessageFor(x => x.ObsoleteUrl)
                                    </div>

                                    <div class="form-group">
                                        <div class="checkbox checkbox-success">
                                            <input id="IsActive" name="IsActive" type="checkbox" value="true" @(Model.IsActive ? "checked=\"checked\"" : "") />
                                            <label for="IsActive">Активна ? (да/нет)</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="checkbox checkbox-success">
                                            <input id="IsDelete" name="IsDelete" type="checkbox" value="true" @(Model.IsDelete ? "checked=\"checked\"" : "") />
                                            <label for="IsDelete">Удалить ? (да/нет)</label>
                                        </div>
                                    </div>

                                        @Html.ValidationSummary()
                                        <button type="submit" class="btn btn-success mr-10">Сохранить</button>
                                        }
                                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->
