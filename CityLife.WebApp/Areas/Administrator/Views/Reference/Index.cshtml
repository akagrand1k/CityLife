
@{
    ViewBag.Title = "Список пользователей";
    string sysTableId = "tableSysReferences";
    string refTableId = "tableReferences";
}

<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-book"></i>Справочники
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_sysref" data-toggle="tab">
                    Системные
                </a>
            </li>
            <li>
                <a href="#tab_common_ref" data-toggle="tab">
                    Обычные
                </a>
            </li>
        
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_sysref">

                <div class="table-container">
                    <table class="table table-striped table-bordered table-hover" id="@sysTableId">
                        <thead>
                            <tr role="row" class="heading">
                                <th>
                                    #
                                </th>
                                <th>
                                    Key
                                </th>
                                <th>
                                    Value
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="tab_common_ref">
                <a href="@Url.Action("EditReferences","Reference")" class="btn btn-default btn-circle">
                    <i class="fa fa-plus"></i>
                    <span class="hidden-480">
                        Новая запись
                    </span>
                </a>
                <table class="table table-striped table-bordered table-hover" id="@refTableId">
                    <thead>
                        <tr role="row" class="heading">
                            <th>
                                #
                            </th>
                            <th>
                                Наименование
                            </th>
                            <th>
                                Alias
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
          
        </div>
        <div class="clearfix margin-bottom-20">

        </div>
    </div>
</div>

@section Scripts{
<script src="~/Scripts/CustomScripts/Datatables/sysReferences.js"></script>
<script src="~/Scripts/CustomScripts/Datatables/commonReferences.js"></script>
}