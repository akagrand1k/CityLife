@model CityLife.WebApp.Areas.Root.Models.References.ApplicationReferenceViewModel
@{
    ViewBag.Title = "Редактирование  справочника";
}
<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="row mt-10">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-wrapper collapse in">
                <div class="panel-heading">
                    <h6 class="panel-title txt-dark">
                        Редактирование
                    </h6>
                </div>
            </div>
        </div>
    </div>    
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">         
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                        <div class="form-body">
                            @Html.AntiForgeryToken()

                            <div class="form-group form-md-line-input">
                                <label class="col-md-2 control-label" for="form_control_1">Наименование</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "required form-control" })
                                    @Html.ValidationMessageFor(x => x.Name)
                                    <div class="form-control-focus">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-2 control-label">Родительский раздел</label>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(model => model.ParentId, new System.Web.Mvc.SelectList(ViewBag.ListReferences, "Id", "Name"), "Укажите из списка родительский раздел",
         new { @class = "table-group-action-input form-control input-medium" })
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <label class="col-md-2 control-label" for="form_control_1">Ключ</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(x => x.Key, new { @class = "required form-control" })
                                    @Html.ValidationMessageFor(x => x.Value)
                                    <div class="form-control-focus">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <label class="col-md-2 control-label" for="form_control_1">Значение</label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(x => x.Value, new { @class = "required form-control" })
                                    @Html.ValidationMessageFor(x => x.Value)
                                    <div class="form-control-focus">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-2 control-label">Является родительской записю ? (да/нет)</label>
                                <div class="col-md-5">
                                    @Html.CheckBoxFor(x => x.IsParent)
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <label class="col-md-2 control-label">Активна ? (да/нет)</label>
                                <div class="col-md-5">
                                    @Html.CheckBoxFor(x => x.IsActive)
                                </div>
                            </div>
                            @Html.ValidationSummary()
                            <button class="btn btn-primary">
                                Сохранить
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

