@model CityLife.WebApp.Models.Widgets.UserInfoViewModel
    <style>
      
    </style>
@if (Model.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="">
            <div class="col-md-4 pull-right">
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <img src="@Model.Avatar" class="img-circle img-responsive" />
                }
            </div>
            <a href="/user/profile" class="link color-black">
                @Model.Name
            </a>
        </li>
        <li><a href="@Url.Action("Logout","Account")" class="link color-black">Выход</a></li>
        
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register" class="link color-black">Регистрация</a></li>
        <li><a href="/Account/Login" class="link color-black">Вход</a></li>
    </ul>
}

